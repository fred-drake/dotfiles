            - icon=
            - icon.color=0xff00ff00
            - icon.font={{ $default_symbol_font | quote }}
          none:
            - icon=
            - icon.color=0xffffffff
            - icon.font={{ $default_symbol_font | quote }}
            - label="No upcoming event"

