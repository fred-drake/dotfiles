      # Styles based on the meeting type (Microsoft Teams, Google Meet, 
      # Cisco Webex, Zoom, a default, and no meeting at all)
      meeting_type:

        # Upcoming meetings
        upcoming:
          default:
            - icon=
            - icon.color=0xffffffff
            - icon.font={{ $default_symbol_font | quote }}
          teams:
            - icon=
            - color=0xff000033
            - icon.font={{ $default_symbol_font | quote }}
