{{- $omz_dir := joinPath .chezmoi.homeDir ".oh-my-zsh" }}
{{- $omz_custom_plugin_dir := joinPath $omz_dir "custom/plugins" -}}
#!/bin/bash
{{- if (not (stat $omz_dir)) }}
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
{{- end }}
{{- if (not (stat (joinPath $omz_custom_plugin_dir "zsh-autosuggestions"))) }}
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
{{- end }}
{{- if (not (stat (joinPath $omz_custom_plugin_dir "zsh-syntax-highlighting"))) }}
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
{{- end }}
{{- if (not (stat (joinPath $omz_custom_plugin_dir "auto-notify"))) }}
git clone https://github.com/MichaelAquilina/zsh-auto-notify.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/auto-notify
{{- end }}
{{- if (not (stat (joinPath $omz_custom_plugin_dir "you-should-use"))) }}
git clone https://github.com/MichaelAquilina/zsh-you-should-use.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/you-should-use
{{- end }}
{{- if (not (stat (joinPath $omz_custom_plugin_dir "zsh-vi-mode"))) }}
git clone https://github.com/jeffreytse/zsh-vi-mode ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-vi-mode
{{- end }}
{{- if (not (stat (joinPath $omz_custom_plugin_dir "zsh-z"))) }}
git clone https://github.com/agkozak/zsh-z ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-z
{{- end }}
